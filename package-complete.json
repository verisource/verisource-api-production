{
  "name": "verisource-video-worker",
  "version": "1.0.0",
  "description": "Video canonicalization worker for content origin credentials (vid:v1)",
  "type": "commonjs",
  "main": "worker/video-worker.js",
  "scripts": {
    "worker:video": "node worker/video-worker.js",
    "verify:video": "node cli/verify-video.js",
    "serve": "node server/index.js",
    "test:goldens": "node goldens/ci-check.js",
    "docker:build": "docker build -t verisource .",
    "docker:run": "docker run --rm -v \"$PWD\":/app verisource",
    "docker:serve": "docker run --rm -p 8080:8080 -v \"$PWD\":/app verisource npm run serve"
  },
  "dependencies": {
    "blake3": "^4.1.0",
    "sharp": "^0.33.4",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "video",
    "canonicalization",
    "content-origin",
    "verification",
    "perceptual-hash",
    "ffmpeg"
  ],
  "author": "Verisource",
  "license": "MIT"
}
